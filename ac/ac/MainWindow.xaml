<Window x:Class="ac.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ac"
        mc:Ignorable="d"
        Title="AC 0.0.1" Width="500"
        SizeToContent="Height">
    <Grid>
        <StackPanel>
            <GroupBox Margin="12" Header="Mouse">
                <StackPanel>
                    <CheckBox x:Name="chkMouseRandomizePosition" Margin="12" Content="Randomize positioning"></CheckBox>
                    <StackPanel Margin="12,0,12,12" Orientation="Horizontal">
                        <TextBlock Text="Timed execution:"></TextBlock>
                        <TextBox x:Name="txtMouseTimedExecutionValue" Width="80" Margin="12,0,0,0" InputScope="Number" Text="0"></TextBox>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
            <StackPanel HorizontalAlignment="Right" Margin="12,0,12,12" Orientation="Horizontal">
                <Button x:Name="btnExit" Width="80" Content="Exit" Click="btnExit_Click"></Button>
                <Button x:Name="btnTrigger" Width="80" Margin="12,0,0,0"  Content="Start"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
